@model User

@{
    ViewData["Title"] = Model.Title;
}

<h4>Thông tin chi tiết nhân viên:</h4>
<div class="row justify-content-between mt-60-px">
    <div class="col-md-5">
        <img src="data:image/*;base64,@(Convert.ToBase64String(Model.Poster))" class="img-thumbnail" alt="@Model.Title" />
    </div>
    <div class="col-md-7">
        <div class="d-flex justify-content-between mb-4">
            <h6>Mô tả : @Model.Title</h6>
        </div>

        <div class="d-flex justify-content-between mb-4">
            <h6>Tên : @Model.UserName</h6>
        </div>

        <div class="d-flex justify-content-between mb-4">
            <h6>Email : @Model.Email</h6>
        </div>

        <div class="d-flex justify-content-between mb-4">
            <h6>Địa chỉ : @Model.Address</h6>
        </div>

        <div class="d-flex justify-content-between mb-4">
            <h6>Số điện thoại : @Model.PhoneNumber</h6>
        </div>

        <div class="d-flex justify-content-between mb-4">
            <h6>Năm : @Model.Year</h6>
        </div>

      @*  <span class="text-muted mr-3">
            <i class="bi bi-calendar-week"></i>
            @Model.Year
        </span>
        <span class="text-muted">
           <i class="bi bi-film"></i>
            @Model.UserName
        </span>
        <p class="text-justify mt-3">@Model.Email</p>*@
    </div>
</div>